pipeline {
    agent any

    tools {
        git 'Default' // Ensure 'Default' matches the Git installation name in Jenkins
        maven 'M2_HOME' // Ensure 'M2_HOME' matches the Maven installation name in Jenkins
        jdk 'JAVA_HOME' // Ensure 'JAVA_HOME' matches the JDK installation name in Jenkins
    }

    environment {
        DOCKER_IMAGE_NAME = 'tp-foyer' // Docker image name
        DOCKER_TAG = '5.0.0' // Docker image tag
        PATH = "$PATH:C:/Users/21626/AppData/Local/Programs/Python/PythonXX/Scripts" // Add the correct path to pre-commit
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'YesminZaghden_NIDS1_G1', url: 'https://github.com/yesminezaghdene03/5NIDS1_G1_TPFOYER.git'
            }
        }

        stage('Install Pre-Commit') {
            steps {
                // Install pre-commit for the Jenkins user
                sh 'pip install --user pre-commit'
            }
        }

        stage('Run Pre-Commit Hooks') {
            steps {
                // Run pre-commit hooks using the correct path
                sh 'pre-commit run --all-files'
            }
        }
    }

    post {
        success {
            echo 'Les hooks de pré-commit se sont exécutés avec succès.'
        }
        failure {
            echo 'Des erreurs sont survenues lors de l\'exécution des hooks de pré-commit.'
        }
    }
}
