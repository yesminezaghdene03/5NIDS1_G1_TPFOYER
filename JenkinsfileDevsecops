pipeline {
    agent any

    environment {
        NEXUS_URL = "http://192.168.50.4:8081/repository/myRepo/"
        NEXUS_CREDENTIAL_ID = "nexusCredential"
        DOCKER_COMPOSE_VERSION = '1.29.2'
        DOCKER_IMAGE_NAME = 'emna0203/emnabelkhiria-5nids1'
        DOCKER_TAG = 'latest'
        SONARQUBE_TOKEN = 'sqp_bc225e0c7bd8daa746a774a9dcc9a6e5cd548f0e'
    }

    stages {
        stage('SCM Checkout') {
            steps {
                git branch: 'EmnaBelkhiria_NIDS1_G1', url: 'https://github.com/yesminezaghdene03/5NIDS1_G1_TPFOYER.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Run Application') {
            steps {
                // Démarrer l'application Spring Boot
                sh 'mvn spring-boot:run'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube Server') {
                    sh "mvn sonar:sonar -Dsonar.projectKey=5NIDS1_G1_TPFOYER -Dsonar.projectName='5NIDS1_G1_TPFOYER' -Dsonar.login=${SONARQUBE_TOKEN}"
                }
            }
        }

        stage('Deployment Nexus') {
            steps {
                sh "mvn deploy -Dmaven.test.skip=true -DaltDeploymentRepository=deploymentRepo::default::${NEXUS_URL}"
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    // Construire l'image Docker
                    sh "docker build -t ${DOCKER_IMAGE_NAME}:${DOCKER_TAG} ."
                }
            }
        }

        stage('Wait for Application') {
            steps {
                script {
                    // Attendre que l'application soit accessible sur http://localhost:8089/tpfoyer
                    sh '''
                    until curl --silent --head --fail http://localhost:8089/tpfoyer; do
                        echo "En attente de l'application Spring Boot..."
                        sleep 10
                    done
                    echo "Application Spring Boot en ligne!"
                    '''
                }
            }
        }

        stage('ZAP Baseline Scan') {
            steps {
                script {
                    // Lancer un scan de sécurité ZAP
                    ZAP_DIR=$(pwd)
                    sh "docker run -v $ZAP_DIR:/zap/wrk:rw -t zaproxy/zap-stable zap-baseline.py -t http://localhost:8089/tpfoyer -d"
                }
            }
        }

        stage('Docker Push') {
            steps {
                script {
                    // Pousser l'image Docker vers le repository
                    sh "docker push ${DOCKER_IMAGE_NAME}:${DOCKER_TAG}"
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Déployer avec Docker Compose
                    sh "docker-compose up -d"
                    sh "docker-compose ps"
                }
            }
        }

        stage('Docker Bench Security Check') {
            steps {
                script {
                    // Exécuter une analyse de sécurité avec Docker Bench
                    sh 'docker run --rm -v /var/run/docker.sock:/var/run/docker.sock --security-opt seccomp=unconfined --name docker-bench -v $PWD:/tmp docker/docker-bench-security > docker-bench-report.txt'
                }
            }
        }

        stage('Archive Report') {
            steps {
                // Archiver le rapport Docker Bench
                archiveArtifacts artifacts: 'docker-bench-report.txt', allowEmptyArchive: true
            }
        }

        stage('View Report') {
            steps {
                // Afficher le contenu du rapport Docker Bench
                sh "cat docker-bench-report.txt"
            }
        }

        stage('Cleanup') {
            steps {
                // Nettoyer les ressources Docker
                sh 'docker-compose down'
                sh 'docker system prune -f'
            }
        }
    }

    post {
        always {
            // Nettoyage des ressources Docker, même si le pipeline échoue
            sh 'docker-compose down'
            sh 'docker system prune -f'
        }
    }
}
