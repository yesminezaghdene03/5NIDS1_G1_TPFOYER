pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Code pour construire l'image Docker
                    sh 'docker build -t my-image .'
                }
            }
        }
        
        stage('Push Docker Image to DockerHub') {
            steps {
                script {
                    // Code pour pousser l'image Docker sur DockerHub
                    sh 'docker push my-image'
                }
            }
        }
        
        stage('Docker Compose Down') {
            steps {
                script {
                    // Code pour arrêter les conteneurs Docker
                    sh 'docker-compose down'
                }
            }
        }

        stage('Docker Compose Up') {
            steps {
                script {
                    // Code pour démarrer les conteneurs Docker
                    sh 'docker-compose up -d'
                }
            }
        }

        stage('Prometheus') {
            steps {
                script {
                    // Code pour l'intégration avec Prometheus
                    sh 'curl -s -X POST http://prometheus-server:9090'
                }
            }
        }

        stage('Grafana') {
            steps {
                script {
                    // Code pour l'intégration avec Grafana
                    sh 'curl -s -X POST http://grafana-server:3000'
                }
            }
        }

        stage('Cleanup Old Docker Images') {
            steps {
                script {
                    // Code pour nettoyer les anciennes images Docker
                    sh 'docker image prune -f'
                }
            }
        }
    }

    post {
        always {
            emailext (
                to: 'aminedridia9@gmail.com',
                subject: "Build Status: ${currentBuild.currentResult}",
                body: "The build ${currentBuild.fullDisplayName} has finished with status: ${currentBuild.currentResult}"
            )
        }
    }
}
